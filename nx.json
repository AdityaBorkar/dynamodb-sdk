{
  "nxCloudAccessToken": "YjJjYzc3YzctNjhmMS00NDcwLTk4NjktMDcwOWZlMDZjZDIzfHJlYWQtd3JpdGU=",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "workspaceLayout": {
    "appsDir": "demos",
    "libsDir": "pkgs"
  },
  "release": {
    "projectsRelationship": "independent",
    "git": {
      "commit": true,
      "tag": false
    },
    "version": {
      "generatorOptions": {
        "currentVersionResolver": "git-tag",
        "specifierSource": "conventional-commits"
      },
      "changelog": {
        "workspaceChangelog": {
          "projectChangelogs": true,
          "createRelease": "github",
          "file": false
        }
      }
    }
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production": [
      "default"
    ],
    "sharedGlobals": []
  },
  "plugins": [
    "@nxtensions/astro"
  ],
  "targetDefaults": {
    "@nxtensions/astro:build": {
      "inputs": [
        "production",
        "^production"
      ],
      "outputs": [
        "{workspaceRoot}/dist/{projectRoot}"
      ],
      "cache": true
    },
    "@nxtensions/astro:check": {
      "inputs": [
        "production",
        "^production"
      ],
      "cache": true
    },
    "@nxtensions/astro:preview": {
      "dependsOn": [
        "build"
      ]
    }
  },
  "generators": {}
}